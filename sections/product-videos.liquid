{% schema %}
{
  "name": "Product Videos",
  "presets": [
    {
      "name": "Product Videos",
      "category": "Theme"
    }
  ]
}
{% endschema %}

<script src="{{ 'videos.js' | asset_url }}" async></script>
<div class="video-list-container">
  <div class="" style="max-width: 1680px; margin: 0 auto">
    <h1 class="page-title">Videos</h1>
    <div class="tab-container" id="categoryTabs"></div>
    <hr>
    <div
      class="sub-tab-container"
      id="subCategoryTabs"
      style="display: none"
    ></div>
    <div class="deeper-video-container" id="videoList"></div>
  </div>

  <div class="video-modal" id="videoModal">
    <div class="video-modal-content">
      <button class="close-modal" onclick="closeVideoModal()">Ã—</button>
      <div id="videoPlayer"></div>
    </div>
  </div>
</div>

<style>
  .video-list-container {
    background-image: url(https://cdn.shopify.com/s/files/1/0256/1038/7504/files/videos-bg.png?v=1739425338);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    min-height: 100vh;
    padding: 40px 0;
  }

  .page-title {
    color: #fff;
    text-align: center;
    font-size: 50px;
    font-style: normal;
    font-weight: 600;
    line-height: 56px;
    letter-spacing: -0.12px;
    text-transform: capitalize;
    margin-bottom: 100px;
  }
  .tab-container {
    display: flex;
    gap: 20px;
    margin: 20px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 10px;
  }
  .tab {
    cursor: pointer;
    padding: 10px 20px;
    border-radius: 4px;
    white-space: nowrap;
    color: rgba(255, 255, 255, 0.7);
    font-size: 16px;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }
  .tab.active {
    border-radius: 50px;
    border-top: 1px solid #fff;
    border-left: 1px solid #fff;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    color: white;
  }
  .tab:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50px;
  }
  .sub-tab-container {
    display: flex;
    gap: 10px;
    margin: 20px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding-bottom: 10px;
  }
  .sub-tab {
    cursor: pointer;
    padding: 8px 16px;
    border-radius: 4px;
    white-space: nowrap;
    font-size: 20px;
  }
  .sub-tab.active {
    display: flex;
    padding: 10px 30px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    color: white;
    border-radius: 50px;
    border: 1px solid #fff;
    backdrop-filter: blur(10px);
  }
  .deeper-video-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(510px, 1fr));
    gap: 20px;
  }
  .video-item {
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    backdrop-filter: blur(10px);
    border-radius: 12px;
  }
  .video-item:hover {
    transform: translateY(-5px);
  }
  .video-item img {
    width: 100%;
    height: 280px;
    object-fit: cover;
    background-color: black;
    transition: all 0.3s ease;
    border-radius: 12px;
  }
  .video-item:hover img {
    transform: scale(1.05);
  }
  .video-info {
    padding: 15px;
  }
  .video-title {
    font-size: 18px;
    margin-bottom: 5px;
    text-align: center;
    font-weight: 400;
    color: #fff;
  }
  .play-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    opacity: 0.8;
    transition: all 0.3s ease;
  }
  .video-item:hover .play-icon {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.1);
  }
  .video-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    justify-content: center;
    align-items: center;
    transition: opacity 0.3s ease;
    opacity: 0;
  }
  .video-modal.active {
    display: flex;
    opacity: 1;
  }
  .video-modal-content {
    position: relative;
    width: 90%;
    max-width: 800px;
    background: #000;
    transform: scale(0.9);
    transition: transform 0.3s ease;
    border-radius: 12px;
    overflow: hidden;
  }
  .video-modal video,
  .video-modal iframe {
    width: 100%;
    aspect-ratio: 16/9;
    border: none;
  }
  .close-modal {
    position: absolute;
    top: 10px;
    right: 10px;
    color: white;
    font-size: 30px;
    cursor: pointer;
    background: none;
    border: none;
    padding: 5px;
    z-index: 1000;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  .close-modal:hover {
    opacity: 1;
  }
  @media (max-width: 768px) {
    .deeper-video-container {
      grid-template-columns: 1fr;
      gap: 15px;
      padding: 0 15px;
    }
    .video-modal-content {
      width: 95%;
    }
    .page-title {
      font-size: 32px;
      line-height: 1.2;
      margin: 20px 0 40px;
    }
    .video-list-container {
      padding: 20px 0;
    }
    .tab {
      font-size: 14px;
      padding: 8px 16px;
    }
    .video-item {
      margin: 0;
    }
    .video-item img {
      height: 200px;
    }
    .video-info {
      padding: 12px;
    }
    .video-title {
      font-size: 14px;
    }
    .play-icon svg {
      width: 50px;
      height: 50px;
    }
    .tab-container,
    .sub-tab-container {
      margin: 15px;
      gap: 12px;
    }
    .sub-tab {
      padding: 6px 12px;
      font-size: 13px;
    }
    .close-modal {
      font-size: 24px;
      top: 5px;
      right: 5px;
    }
  }

  @media (min-width: 768px) and (max-width: 1024px) {
    .deeper-video-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      padding: 0 30px;
    }

    .page-title {
      font-size: 42px;
      margin: 40px 0 60px;
    }

    .video-item img {
      height: 240px;
    }

    .tab {
      font-size: 15px;
      padding: 10px 18px;
    }

    .sub-tab {
      padding: 8px 14px;
      font-size: 14px;
    }

    .video-title {
      font-size: 15px;
    }

    .tab-container,
    .sub-tab-container {
      margin: 18px;
      gap: 15px;
    }

    .play-icon svg {
      width: 60px;
      height: 60px;
    }

    .video-modal-content {
      width: 85%;
    }
  }

  hr {
    border: none;
    height: 1px;
    background: rgba(255, 255, 255, 0.2);
    margin: 20px 0;
  }
  .tab-container::-webkit-scrollbar,
  .sub-tab-container::-webkit-scrollbar {
    height: 6px;
  }
  .tab-container::-webkit-scrollbar-track,
  .sub-tab-container::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }
  .tab-container::-webkit-scrollbar-thumb,
  .sub-tab-container::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
  }
</style>
