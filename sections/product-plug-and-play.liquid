{% schema %}
{
  "name": "product Plug and Play",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Plug and Play"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    },
    {
      "type": "select",
      "id": "width",
      "label": "Section width",
      "default": "wrapper",
      "options": [
        {
          "value": "wrapper--none",
          "label": "Full width"
        },
        {
          "value": "wrapper--full",
          "label": "Full width padded"
        },
        {
          "value": "wrapper",
          "label": "Page width"
        },
        {
          "value": "wrapper--narrow",
          "label": "Page width narrow"
        }
      ]
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "horizontal",
      "options": [
        {
          "value": "horizontal",
          "label": "Horizontal (Side by Side)"
        },
        {
          "value": "vertical",
          "label": "Vertical (Stacked)"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Image Alt Text",
          "default": "Product Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "product Plug and Play",
      "category": "Product",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="product-plug-play section-{{ section.id }}-padding" style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="{{ section.settings.width }}">
    {% if section.settings.section_title != blank %}
      <h2 class="product-plug-play__title">{{ section.settings.section_title }}</h2>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="product-plug-play__content product-plug-play__content--{{ section.settings.layout }}">
        {% for block in section.blocks %}
          <div class="product-plug-play__item" {{ block.shopify_attributes }}>
            {% if block.settings.image %}
              <img
                class="product-plug-play__img lazyload"
                src="{{ block.settings.image | image_url: width: 100 }}"
                data-src="{{ block.settings.image | image_url: width: 1200 }}"
                data-widths="[360, 540, 720, 900, 1080, 1200]"
                data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                data-sizes="auto"
                alt="{{ block.settings.alt_text | escape }}"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                loading="lazy"
              >
            {% else %}
              <div class="product-plug-play__placeholder">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p style="text-align: center; color: #999;">No images added yet. Click "Add block" to add images.</p>
    {% endif %}
  </div>
</section>

<style>
  .section-{{ section.id }}-padding {
    padding-top: var(--PT, 64px);
    padding-bottom: var(--PB, 64px);
  }

  .product-plug-play {
    width: 100%;
    background-color: #fff;
  }

  .product-plug-play__title {
    color: #1D1D1F;
    font-size: 48px;
    font-weight: 700;
    text-transform: capitalize;
    line-height: 56px;
    text-align: center;
    margin-bottom: 40px;
    word-wrap: break-word;
  }

  .product-plug-play__content {
    display: flex;
    width: 100%;
  }

  .product-plug-play__content--horizontal {
    flex-direction: row;
    gap: 20px;
    align-items: center;
    justify-content: center;
  }

  .product-plug-play__content--vertical {
    flex-direction: column;
    gap: 20px;
    align-items: center;
  }

  .product-plug-play__item {
    flex: 1;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .product-plug-play__content--horizontal .product-plug-play__item {
    flex: 1 1 0;
    min-width: 0;
  }

  .product-plug-play__item:hover {
    transform: scale(1.02);
  }

  .product-plug-play__img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }

  .product-plug-play__placeholder {
    width: 100%;
    aspect-ratio: 16/9;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-plug-play__placeholder svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  /* Tablet Responsive */
  @media screen and (min-width: 768px) and (max-width: 1200px) {
    .product-plug-play__title {
      font-size: 32px;
      line-height: 40px;
      margin-bottom: 30px;
    }

    .product-plug-play__content--horizontal {
      gap: 15px;
    }
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .product-plug-play__title {
      font-size: 24px;
      line-height: 30px;
      margin-bottom: 20px;
      text-align: left;
    }

    .product-plug-play__content--horizontal {
      flex-direction: column;
      gap: 15px;
    }

    .product-plug-play__content--vertical {
      gap: 15px;
    }

    .product-plug-play__item {
      width: 100%;
    }

    .section-{{ section.id }}-padding {
      padding-top: calc(var(--PT, 64px) * 0.5);
      padding-bottom: calc(var(--PB, 64px) * 0.5);
    }
  }

  /* Lazyload styles */
  .lazyload,
  .lazyloading {
    opacity: 0;
  }

  .lazyloaded {
    opacity: 1;
    transition: opacity 0.3s;
  }
</style>
